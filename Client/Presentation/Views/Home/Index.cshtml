@{
    List<ContentPageModel> contentPage = (List<ContentPageModel>)ViewBag.contentPage;
    List<Domain.ContentPage> allContentPage = ViewBag.allContentPage;
    HotelModel hotel = (HotelModel)ViewBag.hotel;
}


<div class="container">
    <div class="row m-3">

        <div class="col-lg-4 col-md-4 col-sm-12 text-center">
            <div>
                <br />

                @foreach (ContentPageModel content in contentPage)
                {
                    <img src=@content.urlimage alt="imagenHotelPatito" />

                }


                <h5 class="titulopagina">@hotel.name</h5>

                <div class="separatorline"></div>
                <h6>HOTEL & RESORT</h6>
            </div>
        </div>
        
        <div class="col-lg-8 col-md-8 col-sm-12 text-justify">
            <br />
            <div class="pText">
                <h4 class="titulopagina">Bienvenido al @hotel.name</h4>
                <p>@hotel.description</p>
            </div>
        </div>
       
        <br />
        <br />

        <div class="col-12">
            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="@allContentPage[0].urlimage" class="imgcarousel d-block w-100" alt="@allContentPage[0].urlimage">
                    </div>
                    @foreach (Domain.ContentPage content in allContentPage)
                    {
                        if (content.referentpage != "publicity" & content.referentpage != "home")
                        {
                        <div class="carousel-item">
                            <img src="@content.urlimage" class="imgcarousel d-block w-100" alt="@content.urlimage">

                            <div class="carousel-caption d-none d-md-block">
                                <div class="pText">
                                <h5 style="color:black">@content.content</h5>
                                <a class="btn btn-light" href="/Reservation/Home">RESERVA AHORA</a>
                                </div>
                                
                            </div>
                        </div>
                        }
                    }
                </div>
                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>

    </div>

    <div class=""></div>
</div>
