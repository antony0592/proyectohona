@{
    IEnumerable<Domain.ContentPage> contentPages = ViewBag.contentPage;
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <div>
                <br />
                <h5> Facilidades </h5>
            </div>
        </div>
    </div>

    <div id="principal">
        <div>
            <br />
            <h5> Administrar Facilidades</h5>
            <button id="addFacility" type="button" class="btn btn-primary" data-toggle="modal" data-target="#UpdateModalFacility" onclick="AddFacility()">Agregar Facilidades</button>
        </div>
        <p>
            <table class="table table-striped table-bordered table-sm display" id="tbfacility" style="width:100%">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>content</th>
                        <th>Imagen</th>
                        <th style="text-align: center;"><a title="Haga clic sobre el icono del lapiz para editar o eliminar la Facilidades."><i class='fa fa-info'></i></a></th>
                    </tr>
                </thead>
                <tbody class="tbody"></tbody>
            </table>
    </div>
</div>


 @*Modal UPDATE Facility*@ 
<div class="modal fade" id="UpdateModalFacility" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Modificar Facilidad</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="formularioFacility">
                    <div class="form-group">
                        <div class="col-md-12">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="row">
                                        <div class="col-6" id="divactualimageF">
                                            <p style="color:blue">Imagen Actual</p>
                                            <img id="imgFacility" src="~/images/Hotel_Patito-01.svg" style="height:100px" />
                                        </div>
                                        <div class="col-6">
                                            <output id="listF">
                                                <p style="color:red">Imagen Nueva</p>
                                            </output>
                                        </div>
                                    </div>
                                    <input accept="image/x-png,image/gif,image/jpeg" class="form-control-sm" type="file" id="fileFacility" name="files[]" required />
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="content">Content</label>
                                <textarea class="form-control" id="contentFacility" name="contentFacility" rows="8" cols="100"></textarea>
                                <p style="color:red" id="errorContent"></p>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
                <button id="updatefacility" type="button" class="btn btn-success">Modificar</button>
                <button id="addfacility" type="button" class="btn btn-primary">Agregar</button>
            </div>
        </div>
    </div>
</div>


 @*Modal DELETE Facility*@ 
<div class="modal fade" id="DeleteModalFacility" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Eliminar Facilidad</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <h4 style="color:red">¿Seguro que deseas borrar esta Facilidad?</h4>
            </div>
            <div class="modal-footer">
                <input type="text" id="idfacility" name="idfacility" class="invisible" readonly>
                <button type="button" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
                <button type="button" id="btndeletefacility" class="btn btn-success">Confirmar Eliminación</button>
            </div>
        </div>
    </div>
</div>