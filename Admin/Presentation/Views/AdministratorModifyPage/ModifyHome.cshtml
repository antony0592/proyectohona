@{
    List<ContentPageModel> contentPage = (List<ContentPageModel>)ViewBag.contentPage;
    HotelModel hotel = (HotelModel)ViewBag.hotel;
}

<div class="container pText w-75">
    <div class="row">
        <form action="/AdministratorModifyPage/UpdateHome" method="post" enctype = "multipart/form-data">
            <div class="col-12">
                <div>
                    <br />
                    <h4> Modificar Páginas </h4>
                    <br />
                    <h5>Home</h5>
                    <p style="color:red" id="messageModifyHome"></p>
                    <textarea id="description" name="description" rows="10" cols="200">@hotel.description</textarea>
                </div>
            </div>
            <div class="col-12">
                <div class="row w-75">
                    <div class="col-4 text-center">
                        <br />
                        <h6>Imagen Actual</h6>
                        @foreach (ContentPageModel content in contentPage)
                        {
                            <img src="@content.urlimage" class="d-block w-100 img">
                        }
                    </div>
                    <div class="col-8">
                        <br />
                        <br />
                        <br />
                        <div class="custom-file">
                            <input type="file" class="custom-file-input" name="file" id="fileModifyHome">
                            <label class="custom-file-label" for="customFile">Choose file</label>
                        </div>
                        <br />
                        <br />
                        <input title="Guardar Cambios" id="updateHome" type="submit" class="btn btn-primary" value="Guardar">
                        <a title="Volver" href="ModifyPage"><input type="button" class="btn btn-danger" value="Cancelar"></a>
                        
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

