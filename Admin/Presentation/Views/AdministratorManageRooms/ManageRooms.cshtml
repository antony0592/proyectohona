    </div>
    <div>
        <br />
        <h5>Standard</h5>
    </div>
    <table class="table table-striped table-bordered table-sm" id="tableTypeRoom">
        <thead>
            <tr>
                <th>Número de Habitación</th>
                <th>Estado</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < room.Count(); i++)
            {
                if (room[i].idtyperoom.Equals(2))
                {
                    <tr>
                        <td class="creationdate">@room[i].number</td>
                        @if (@room[i].state.Equals(1))
                        {
