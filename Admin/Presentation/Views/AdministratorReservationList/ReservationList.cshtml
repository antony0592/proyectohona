@{
    ViewData["Title"] = "ReservationList";
    List < ReservationModel > reservation = (List<ReservationModel>)ViewBag.reservation;
    List<ClientModel> client = (List<ClientModel>)ViewBag.client;
    List<PaymentcardModel> paymentcard = (List<PaymentcardModel>)ViewBag.paymentcard;
    List<TypeRoomModel> typeroom = (List<TypeRoomModel>)ViewBag.typeroom;
    List<VoucherModel> voucher = (List<VoucherModel>)ViewBag.voucher;
}
    <div class="container pText">
        <div id="principal" class="show">
            <div class="col-12">
                <div>
                    <br />
                    <h4> Lista de reservaciones </h4>
                </div>
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-sm display" id="tbl"  style="width:100%" >
                        <thead>
                            <tr>
                                <th>Fecha</th>
                                <th>Id Reserva</th>
                                <th>Nombre</th>
                                <th>Apellidos</th>
                                <th>Email</th>
                                <th># Tarjeta</th>
                                <th>Fecha llegada</th>
                                <th>Fecha de salida</th>
                                <th>Tipo Habitación</th>
                                <th>Ver Detalles</th>
                                <th>Eliminar</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < voucher.Count(); i++)
                            {
                            <tr>
                                <td class="creationdate">@voucher[i].creationdate</td>
                                <td class="id">@voucher[i].idreservation</td>
                                <td class="name">@client[i].name</td>
                                <td class="lastname">@client[i].lastname</td>
                                <td class="email">@client[i].email</td>
                                <td class="number">***********@paymentcard[i].cardnumber</td>
                                <td class="arrivaldate">@reservation[i].arrivaldate</td>
                                <td class="departuredate">@reservation[i].departuredate</td>
                                <td class="description">@typeroom[i].description</td>
                                <td id="consult" class="consult" onclick="cambiaVisibilidad()">
                                    <a href="#" title="Ver Detalles" style="color:black">
                                        <img src="https://img.icons8.com/ios/20/000000/view-details.png">Ver
                                    </a>
                                </td>
                                <td id="delete" class="delete">
                                    <a href="#" title="Eliminar Reserva" style="color:black">
                                        <img src="https://img.icons8.com/wired/20/000000/filled-trash.png">Eliminar
                                    </a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
        <div style="display:none;" id="getreservation" class="text-center row">
            <div class="col-12 text-left">
                <button title="Volver" onclick="cambiaVisibilidad()" type="button" class="btn btn-danger" value="Volver"> Volver </button>
                <br />
            </div>
            <div class="col-12 text-center">
                <h2>Lista de reservaciones-Ver Reserva</h2>
                <br />
                <h5 id="creationdate" name="creationdate">Fecha:</h5>
                <h5 id="id" name="id">ID Reserva:</h5>
                <h5 id="name" name="name">Nombre: </h5>
                <h5 id="lastname" name="lastname">Apellidos: </h5>
                <h5 id="email" name="email">Email: </h5>
                <h5 id="number" name="number">Tarjeta: </h5>
                <h5 id="arrivaldate" name="arrivaldate">Fecha Llegada: </h5>
                <h5 id="departuredate" name="departuredate">Fecha Salida: </h5>
                <h5 id="description" name="description">Tipo Habitación: </h5>
            </div>
        </div>
        
    </div>

