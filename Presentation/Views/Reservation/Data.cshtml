
@{
    ViewData["Title"] = "Datos";
}

<div class="container">
    <br />
    <h5 class="titulopagina"> Reserva en linea </h5>
    <br />
    <div class="row w-75">
        <div class="col-4">
            <h6>Habitacion disponible</h6>
            <div class="img">
                <img src="~/images/Facilidades/facilidad-01.jpg" class="img-fluid">
            </div>
        </div>
        <div class="col-8">
            <br />
            <p>
                Lorem Ipsum is simply dummy text of the printing and typesetting industry.
                Lorem Ipsum is simply dummy text of the printing and typesetting industry.
            </p>
        </div>
        <div class="col-12">
            <div>
                <br />
                <h6>Monto de su reservación $XYZ </h6>
                <h3 id="welcomeback"></h3>
                <form>
                    <div class="form-group row">
                        <label for="idnumber" class="col-sm-2 col-form-label">Identificación:</label>
                        <div class="col-sm-10">
                            <input type="number" pattern="/[^0-9]" maxlength="9" minlength="9" min="100000000" placeholder="123456789" class="form-control" id="idnumber" required>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="name" class="col-sm-2 col-form-label">Nombre</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="clientname" required>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="lastname" class="col-sm-2 col-form-label">Apellidos</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="clientlastname" required>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="email" class="col-sm-2 col-form-label">Correo</label>
                        <div class="col-sm-10">
                            <input type="email" class="form-control" id="clientemail" required>
                        </div>
                    </div>

                    <button id="payment" data-toggle="modal" @*data-target="#paymentModal"*@ class="btn btn-primary" type="submit">Procesar pago</button>
                    <a href="/Reservation/Home" class="btn btn-danger" type="button">Cancelar</a>
                    <br />
                    <label id="paymenterror"></label>
                </form>
            </div>
        </div>
    </div>
</div>


<!-- Modal -->
