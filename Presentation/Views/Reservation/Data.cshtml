
@{
    ViewData["Title"] = "Datos";
}

    <div class="container">
        <br />
        <h5> Reserva en linea </h5>
        <br />
        <div class="row w-75">
            <div class="col-4">
                <h6>Habitacion disponible</h6>
                <div class="img">
                    <img src="~/images/Facilidades/facilidad-01.jpg" class="img-fluid">
                </div>
            </div>
            <div class="col-8">
                <br />
                <p>
                    Lorem Ipsum is simply dummy text of the printing and typesetting industry.
                    Lorem Ipsum is simply dummy text of the printing and typesetting industry.
                </p>
            </div>
            <div class="col-12">
                <div>
                    <br />
                    <h6>Monto de su reservación $XYZ </h6>
                    <form action="/Reservation/Confirmation">
                        <div class="form-group row">
                            <label for="name" class="col-sm-2 col-form-label">Nombre</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="name" required>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="lastname" class="col-sm-2 col-form-label">Apellidos</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="lastname" required>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="email" class="col-sm-2 col-form-label">Correo</label>
                            <div class="col-sm-10">
                                <input type="email" class="form-control" id="email" required>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="creditcard" class="col-sm-2 col-form-label">Tarjeta de crédito</label>
                            <div class="col-sm-10">
                                <input type="number" class="form-control" id="creditcard" required>
                            </div>
                        </div>
                        <button class="btn btn-primary" type="submit">Aceptar</button>
                        <button class="btn btn-danger" type="button">Cancelar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
