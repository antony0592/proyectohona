
@{
    ViewData["Title"] = "Datos";
}

<div class="container">
    <br />
    <h5 class="titulopagina"> Reserva en linea </h5>
    <br />
    <div class="row w-75">
        <div class="col-4">
            <h6>Habitacion disponible</h6>
            <div class="img">
                <img src="~/images/Facilidades/facilidad-01.jpg" class="img-fluid">
            </div>
        </div>
        <div class="col-8">
            <br />
            <p>
                Lorem Ipsum is simply dummy text of the printing and typesetting industry.
                Lorem Ipsum is simply dummy text of the printing and typesetting industry.
            </p>
        </div>
        <div class="col-12">
            <div>
                <br />
                <h6>Monto de su reservación $XYZ </h6>
                <form>
                    <div class="form-group row">
                        <label for="idnumber" class="col-sm-2 col-form-label">Identificación:</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="idnumber" required>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="name" class="col-sm-2 col-form-label">Nombre</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="name" required>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="lastname" class="col-sm-2 col-form-label">Apellidos</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="lastname" required>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="email" class="col-sm-2 col-form-label">Correo</label>
                        <div class="col-sm-10">
                            <input type="email" class="form-control" id="email" required>
                        </div>
                    </div>

                    <button data-toggle="modal" data-target="#paymentModal" class="btn btn-primary" type="submit">Procesar pago</button>
                    <button class="btn btn-danger" type="button">Cancelar</button>
                </form>
            </div>
        </div>
    </div>
</div>


<!-- Modal -->
<div class="modal fade text-center" id="paymentModal" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog text-center" role="document">
        <div class="modal-content text-center">
            <div class="modal-header text-center">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body text-center">
                <form id="formpaypal">
                    <div class="col-md-12 text-center">
                        <img src="~/images/PayPal-Logo.png" id="paypallogo" />
                    </div>
                    <div class="form-group row text-center">
                        <div class="col-md-12 text-center">
                            <input type="text" class="form-control" placeholder="Correo electrónico" required >
                        </div>
                    </div>
                    <div class="form-group row text-center">
                        <div class="col-sm-12 text-center">
                            <input type="password" class="form-control" placeholder="Ingrese su contraseña" required>
                        </div>
                    </div>
                    <div class="form-group row text-center">
                        <div class="col-sm-12 text-center">
                            <button id="loginpaypal" class="btn btn-primary"> Iniciar sesion</button>
                        </div>
                    </div>
                    <div class="form-group row text-center">
                        <div class="col-sm-12 text-center">
                            <br />
                            <a href="#">¿Tienen problemas para iniciar sesion?</a>
                            <br />
                            <a>--- o ---</a>
                            <br />
                            <button class="btn btn-secondary">Registrarse </button>
                        </div>
                    </div>
                </form>

                <form id="conpay" style="display:none" action="/Reservation/Confirmation">
                    <div class="text-center">
                        <h2> Hotel Patito</h2>
                        <div class="row">
                            <div class="col-6">
                                <img src="~/images/PayPal-Logo.png" id="paypallogo" />
                                <label>$5000</label>
                            </div>
                        </div>
                    </div>
                    <button>Pagar ahora</button>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>

            </div>
        </div>
    </div>
</div>

